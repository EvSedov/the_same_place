mixin card(idForImg, imgClassName = '', imgName, imgExt, styleName = '', title = '', subTitle = '', text = '', subText='')
  .card.my-3(style = styleName)
    .row.g-0
      .col-lg-5
        +image(idForImg, imgClassName, imgName, imgExt)
      .col-lg-7
        .card-body.h-100.d-flex.flex-column.justify-content-center.align-items-center
          h2.card-title.fw-bold.text-center= title
          h3.card-title.fw-bold.text-center= subTitle
          p.card-text.fs-4.mt-3.fw-normal.lh-sm.text-center= text
          p.card-text.text-center.text-muted.fs-4.fw-normal.lh-sm= subText
