mixin card(imgClassName, imgName, imgExt, title, subTitle, text, subText='')
  .card.mt-3.bg-light
    .row.g-0
      .col-md-5
        +image(imgClassName, imgName, imgExt)
      .col-md-7
        .card-body
          h1.card-title.fw-bold.text-uppercase= title
          h3.card-title.fw-bold.my-4= subTitle
          p.card-text.main-text.fs-5.mt-3.fw-normal.lh-sm= text
          p.card-text
            small.text-muted= subText