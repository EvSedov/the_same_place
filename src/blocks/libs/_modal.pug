mixin modal(modalId = '', imgName, imgExt, styleForTitle='', title = '', content = '', address = '', telephone = '')
  .modal.fade(id = modalId data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
    .modal-dialog.modal-lg.modal-fullscreen-lg-down.modal-dialog-scrollable
      .modal-content
        .modal-header
          h4#staticBackdropLabel.modal-title.text-center(style = styleForTitle) !{title}
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          .container-fluid
            .row
              .col-12.d-flex.justify-content-center
                +image('img-fluid mb-3', imgName, imgExt)
              .col-12
                p.fs-6(style="text-align: justify;")= content
                p.text-muted.fs-4= address
                p.fs-4= telephone
        .modal-footer
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Закрыть