mixin carusel(images)
  #carouselExampleIndicators.carousel.carousel-dark.slide(data-bs-interval="false")
    .carousel-indicators(style="margin-bottom: -20px;")
      each image, index  in images
        if index === 0
          button.active(type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to=`${index}` aria-current='true' aria-label=`Slide ${index + 1}` style="width: 100px;")
            +image('', "d-block w-100 img-fluid", `${image}-icon`, 'jpg')
        else
          button(type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to=`${index}` aria-label=`Slide ${index + 1}` style="width: 100px;")
            +image('', "d-block w-100 img-fluid", `${image}-icon`, 'jpg')
        
    .carousel-inner
      each image, index in images
        if index === 0
          .carousel-item.active
            +image('', 'd-block w-100', image, 'jpg')
        else
          .carousel-item
            +image('', 'd-block w-100', image, 'jpg')
    button.carousel-control-prev(type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true' style="width: 3rem; height: 3rem;")
      span.visually-hidden Предыдущий слайд
    button.carousel-control-next(type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true' style="width: 3rem; height: 3rem;")
      span.visually-hidden Следующий слайд