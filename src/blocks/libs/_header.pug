mixin header(nameForActiveLink='Главная')
  header.header.bg-light
    nav.navbar.navbar-expand-lg.navbar-light
      .container
        a.navbar-brand(href='./index.html')
          img.logo(src=require('../../../src/images/logo.png') alt='logo' loading='lazy')
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse.justify-content-center
          .navbar-nav.text-uppercase.fw-bold
            each key, value in { 'Главная': './index.html', 'Квартиры и апартаменты': './apartments.html', 'Рекомендую посетить': './recommend.html', 'Контакты': './contacts.html' }
              if value == nameForActiveLink
                a.nav-link.active-link(aria-current='page' href=key)= value
              else
                a.nav-link.font-weight-bold(href=key)= value