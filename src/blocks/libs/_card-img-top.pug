mixin cardImgTop(imgClassName = '', imgName, imgExt, styleName = '', title = '', subTitle = '', text = '', subText='')
  .card.mt-3.position-relative(style = styleName)
    .row.g-0
      +image(imgClassName, imgName, imgExt)
      .card-body.text-center(style="height: 80px;")
        h6.card-title.m-0.fw-bold !{title}
    a.position-absolute(style="top: 0; bottom: 0; right: 0; left: 0; cursor: pointer;")